<%- include('../../partials/header'); %>

<div class="container content-body" >
    <header class="jumbotron" id="campusite-header">
        <div class="container">
            <h1 class="display-1">Discover awesome views of your campus</h1>
        <a class="btn btn-danger btn-large" href="/campusites/new">New Site</a>
        </div>
    </header>
    
    <div class="row">
        <% sites.forEach(function(site) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 pt-4">
                <div class="card">
                    <a href="/campusites/<%= site._id %>">
                        <img src="<%= site.img %>" class="card-img-top" alt="">
                    </a>
                    <div class="card-body">
                        <h5><%= site.name %></h5>
                        <p><%= site.campus %></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    
</div>



<%- include('../../partials/footer'); %>
