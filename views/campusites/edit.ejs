<%- include('../../partials/header'); %>
<div class="container">
    <div class="row justify-content-center">
        <div class='col-10 col-lg-6 newForm' >
            <h1 class="display-1">Edit your site</h1>
            <form action="/campusites/<%= site._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="site[name]" value="<%= site.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="site[campus]" value="<%= site.campus %>">
                </div>
                <div class="form-group">
                    <textarea rows="10" class="form-control" name="site[body]"><%= site.body %></textarea>
                </div>
                <div class="form-group uploadImg">
                    <div>
                        <label for="image">Upload image</label>
                    </div>
                    <input id="image" type="file" name="image" accept="image/*">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>


<%- include('../../partials/footer'); %>