<%- include('../../partials/header'); %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10 col-lg-6 newForm">
            <h1 class="display-1">Create your new site</h1>
            <form action="/campusites" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="site[name]" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="site[campus]" placeholder="Campus" required>
                </div>
                <div class="form-group">
                    <textarea rows="10" class="form-control" name="site[body]" placeholder="Description"></textarea>
                </div>
                <div class="form-group uploadImg">
                    <div>
                        <label for="image">Upload image</label>
                    </div>
                    <input id="image" type="file" name="image" accept="image/*" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>



<%- include('../../partials/footer'); %>